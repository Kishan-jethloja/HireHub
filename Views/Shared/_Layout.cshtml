<!DOCTYPE html>
<html lang="en">
<head>
    @using Microsoft.AspNetCore.Identity
    @using PlacementManagementSystem.Models
    @inject SignInManager<ApplicationUser> SignInManager
    @inject UserManager<ApplicationUser> UserManager
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HireHub</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index">HireHub</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainNavbar" aria-controls="mainNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        @{
                            var currentUser = SignInManager.IsSignedIn(User) ? UserManager.GetUserAsync(User).Result : null;
                        }
                        @if (currentUser == null)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Students</a></li>
                        }
                        else if (currentUser.UserType == UserType.College)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="College" asp-action="Students">Students</a></li>
                        }
                        @if (currentUser != null && currentUser.UserType == UserType.College)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="College" asp-action="Companies">Companies</a></li>
                        }
                        @if (currentUser == null)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Jobs</a></li>
                        }
                        else if (currentUser.UserType == UserType.Student)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Student" asp-action="Jobs">Jobs</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Student" asp-action="Announcements">Announcements</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Chat" asp-action="Index">Chat</a></li>
                        }
                        else if (currentUser.UserType == UserType.Company)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Company" asp-action="MyJobs">Jobs</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Company" asp-action="Feedback">Feedback</a></li>
                        }
                    </ul>
                    <div class="navbar-nav">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container py-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
