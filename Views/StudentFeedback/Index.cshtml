@model List<dynamic>
@{
    ViewData["Title"] = "My Feedback";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="mb-0">My Feedback</h2>
                <div class="text-muted">
                    <i class="fas fa-comment-alt"></i> Provide feedback for decided applications
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-12">
            @if (Model != null && Model.Count > 0)
            {
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5 class="mb-0">Applications Ready for Feedback</h5>
                        <small class="text-muted">You can provide feedback for applications that have been accepted or rejected</small>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Job Title</th>
                                        <th>Company</th>
                                        <th>Status</th>
                                        <th>Applied Date</th>
                                        <th>Feedback</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var app in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@app.JobTitle</strong>
                                            </td>
                                            <td>@app.CompanyName</td>
                                            <td>
                                                @if (app.Status == ApplicationStatus.Hired)
                                                {
                                                    <span class="badge badge-success">Hired</span>
                                                }
                                                else if (app.Status == ApplicationStatus.Rejected)
                                                {
                                                    <span class="badge badge-danger">Rejected</span>
                                                }
                                            </td>
                                            <td>@app.AppliedDate.ToLocalTime().ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (app.HasFeedback)
                                                {
                                                    <span class="text-success"><i class="fas fa-check-circle"></i> Feedback Given</span>
                                                }
                                                else
                                                {
                                                    <span class="text-warning"><i class="fas fa-clock"></i> Pending</span>
                                                }
                                            </td>
                                            <td>
                                                @if (app.HasFeedback)
                                                {
                                                    <span class="text-muted">Already provided</span>
                                                }
                                                else
                                                {
                                                    <a class="btn btn-primary btn-sm" asp-action="Create" asp-route-applicationId="@app.ApplicationId">
                                                        <i class="fas fa-comment"></i> Give Feedback
                                                    </a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-comment-alt fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No Applications Ready for Feedback</h4>
                        <p class="text-muted">You can provide feedback once your applications are accepted or rejected.</p>
                        <a class="btn btn-primary" asp-controller="Student" asp-action="Jobs">
                            <i class="fas fa-briefcase"></i> Browse Jobs
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
