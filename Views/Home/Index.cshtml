@using PlacementManagementSystem.Models
@using System.Linq
@{
    ViewData["Title"] = "HireHub";
}

@if (User.Identity.IsAuthenticated)
{
    <div class="container">
        @if (TempData["ProfileUpdated"] != null)
        {
            <div class="alert alert-success" role="alert">Your profile has been updated successfully.</div>
        }
        @* Profile completion banner for students *@
        @if (ViewBag.ShowProfileBanner == true)
        {
            <div class="alert alert-warning d-flex justify-content-between align-items-center" role="alert">
                <div>
                    <strong>Please complete your profile.</strong> Add your college, CPI, department, passing out year, and resume.
                </div>
                <a class="btn btn-sm btn-primary" asp-controller="Student" asp-action="Profile">Go to Profile</a>
            </div>
        }
        @* Company dashboard remains shortcut cards; Student dashboard shows announcements *@
        @if (User.HasClaim("UserType", ((int)UserType.Company).ToString()))
        {
            <div class="row">
                <div class="col-12 mb-3">
                    <h2 class="mb-0">Dashboard</h2>
                    <p class="text-muted">Quick links</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Post a Job/Internship</h5>
                            <p class="card-text">Create a new opening and attach your Google Form.</p>
                            <a class="btn btn-primary" asp-controller="Company" asp-action="CreateJob">Create Job</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">My Job Posts</h5>
                            <p class="card-text">View and manage your job/internship postings.</p>
                            <a class="btn btn-outline-primary" asp-controller="Company" asp-action="MyJobs">View Jobs</a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-12 mb-3">
                    <h2 class="mb-0">Announcements</h2>
                    <p class="text-muted">Updates for your active applications</p>
                </div>
            </div>
            var anns = (IEnumerable<PlacementManagementSystem.Models.Announcement>)ViewBag.DashboardAnnouncements ?? Enumerable.Empty<PlacementManagementSystem.Models.Announcement>();
            @if (!anns.Any())
            {
                <div class="alert alert-info">No announcements yet.</div>
            }
            else
            {
                <div class="list-group">
                    @foreach (var a in anns)
                    {
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <strong>@a.Title</strong>
                                <small class="text-muted">@a.CreatedAtUtc.ToLocalTime().ToString("g")</small>
                            </div>
                            <div>@a.Message</div>
                        </div>
                    }
                </div>
            }
        }
    </div>
}
else
{
    <!-- Hero Section -->
    <div class="hero-section bg-gradient-primary text-white py-5 mb-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-4 font-weight-bold mb-4">Welcome to HireHub</h1>
                    <p class="lead mb-4">Empowering Students & Companies</p>
                    <p class="mb-4">Connect talented students with leading companies through our comprehensive placement management platform. Streamline your hiring process and discover your dream career.</p>
                    
                    <div class="mt-4">
                        <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg mr-3">Get Started</a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-lg">Login</a>
                    </div>
                </div>
                <div class="col-lg-6 text-center">
                    <i class="fas fa-handshake fa-10x opacity-75"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="container py-5">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="display-5 font-weight-bold mb-3">Why Choose HireHub?</h2>
                <p class="lead text-muted">Comprehensive solutions for modern placement management</p>
            </div>
        </div>
        
        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-users fa-3x text-primary"></i>
                        </div>
                        <h5 class="card-title">For Students</h5>
                        <p class="card-text">Discover job opportunities, track applications, get real-time updates, and connect with peers through our college-specific chat system.</p>
                        <ul class="list-unstyled text-left">
                            <li><i class="fas fa-check text-success mr-2"></i>Browse job postings</li>
                            <li><i class="fas fa-check text-success mr-2"></i>Real-time chat with peers</li>
                            <li><i class="fas fa-check text-success mr-2"></i>Application tracking</li>
                            <li><i class="fas fa-check text-success mr-2"></i>Feedback system</li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-building fa-3x text-primary"></i>
                        </div>
                        <h5 class="card-title">For Companies</h5>
                        <p class="card-text">Post jobs, manage applications, analyze feedback, and find the perfect candidates for your organization.</p>
                        <ul class="list-unstyled text-left">
                            <li><i class="fas fa-check text-success mr-2"></i>Post job openings</li>
                            <li><i class="fas fa-check text-success mr-2"></i>Manage applications</li>
                            <li><i class="fas fa-check text-success mr-2"></i>Feedback analysis</li>
                            <li><i class="fas fa-check text-success mr-2"></i>Candidate insights</li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-graduation-cap fa-3x text-primary"></i>
                        </div>
                        <h5 class="card-title">For Colleges</h5>
                        <p class="text-muted">Manage student profiles, approve applications, and track placement statistics for your institution.</p>
                        <ul class="list-unstyled text-left">
                            <li><i class="fas fa-check text-success mr-2"></i>Student management</li>
                            <li><i class="fas fa-check text-success mr-2"></i>Application approval</li>
                            <li><i class="fas fa-check text-success mr-2"></i>Placement tracking</li>
                            <li><i class="fas fa-check text-success mr-2"></i>Statistics dashboard</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- CTA Section -->
    <div class="container py-5">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="display-5 font-weight-bold mb-4">Ready to Get Started?</h2>
                <p class="lead text-muted mb-4">Join thousands of students and companies already using HireHub</p>
                <div class="mt-4">
                    <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg mr-3">Create Account</a>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg">Sign In</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Custom CSS for enhanced styling -->
    <style>
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .feature-icon {
            transition: transform 0.3s ease;
        }
        
        .card:hover .feature-icon {
            transform: scale(1.1);
        }
        
        
        .bg-gradient-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
    </style>
}
