@model PlacementManagementSystem.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Register</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post" id="registerForm" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger"></div>
            
                        <div class="form-group">
                            <label asp-for="UserType" class="form-label">User Type <span class="text-danger">*</span></label>
                            <select asp-for="UserType" class="form-control" id="userTypeSelect" autocomplete="organization-title">
                                <option value="">Select your role</option>
                                <option value="1">Student</option>
                                <option value="2">Company</option>
                                <option value="3">College</option>
                            </select>
                            <span asp-validation-for="UserType" class="text-danger"></span>
                        </div>

                        <div id="commonFields" style="display: none;">
                            <div id="nameFields">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="FirstName" class="form-label">First Name <span class="text-danger">*</span></label>
                                            <input asp-for="FirstName" class="form-control" autocomplete="given-name" />
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="LastName" class="form-label">Last Name <span class="text-danger">*</span></label>
                                            <input asp-for="LastName" class="form-control" autocomplete="family-name" />
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Company specific fields -->
                        <div id="companyFields" style="display: none;">
                            <h4>Company Information</h4>

                            <div class="form-group">
                                <label class="form-label">Company Name <span class="text-danger">*</span></label>
                                <input asp-for="CompanyName" class="form-control" autocomplete="organization" />
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </div>

                        </div>

                        <!-- College specific fields -->
                        <div id="collegeFields" style="display: none;">
                            <h4>College Information</h4>

                            <div class="form-group">
                                <label class="form-label">College Name <span class="text-danger">*</span></label>
                                <input asp-for="CollegeName" class="form-control" autocomplete="organization" />
                                <span asp-validation-for="CollegeName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="form-label">College Website</label>
                                <input asp-for="Website" class="form-control" autocomplete="url" />
                                <span asp-validation-for="Website" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="form-label">City <span class="text-danger">*</span></label>
                                <input asp-for="City" class="form-control" autocomplete="address-level2" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="form-label">State <span class="text-danger">*</span></label>
                                <input asp-for="State" class="form-control" autocomplete="address-level1" />
                                <span asp-validation-for="State" class="text-danger"></span>
                            </div>
                        </div>

                        <div id="credentialsFields" style="display: none;">
                            <div class="form-group">
                                <label asp-for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                                <input asp-for="Email" class="form-control" autocomplete="email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Password" class="form-label">Password <span class="text-danger">*</span></label>
                                        <input asp-for="Password" class="form-control" autocomplete="new-password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="ConfirmPassword" class="form-label">Confirm Password <span class="text-danger">*</span></label>
                                        <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Register</button>
                        </div>
                        
                        <div class="text-center">
                            <p class="mb-0">
                                Already have an account? 
                                <a asp-controller="Account" asp-action="Login" class="text-primary font-weight-bold">Sign In</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // User type selection functionality
        var userTypeSelect = document.getElementById('userTypeSelect');
        var companyFields = document.getElementById('companyFields');
        var collegeFields = document.getElementById('collegeFields');
        var commonFields = document.getElementById('commonFields');
        var nameFields = document.getElementById('nameFields');
        var credentialsFields = document.getElementById('credentialsFields');

        function updateVisibility() {
            var userType = userTypeSelect.value;
            companyFields.style.display = 'none';
            collegeFields.style.display = 'none';
            commonFields.style.display = 'none';
            nameFields.style.display = 'none';
            credentialsFields.style.display = 'none';

            if (userType === '') {
                return; // nothing selected
            }
            // show common blocks once a role is chosen
            commonFields.style.display = 'block';
            credentialsFields.style.display = 'block';
            // show name fields for Student only
            if (userType === '1') {
                nameFields.style.display = 'block';
            }
            // show company fields for Company role
            if (userType === '2') {
                companyFields.style.display = 'block';
            }
            // show college fields only for College role
            if (userType === '3') {
                collegeFields.style.display = 'block';
            }
        }

        userTypeSelect.addEventListener('change', updateVisibility);
        // On page load (handles back/validation scenarios)
        updateVisibility();
    </script>
}